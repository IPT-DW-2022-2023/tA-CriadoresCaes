@model CriadorCaes.Models.Animais

@{
    ViewData["Title"] = "Detalhes de um animal";
}

<h1>Detalhes de um animal</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCompra)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCompra)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumLOP)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumLOP)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Criador)
        </dt>
        <dd class = "col-sm-10">
         <a asp-action="ListaCaes" asp-controller="Criadores" asp-route-id="@Model.Criador?.Id">
            @Html.DisplayFor(model => model.Criador.Nome)
         </a>
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RacaFK)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Raca.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Regressar</a>
</div>
